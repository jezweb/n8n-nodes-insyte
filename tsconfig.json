{
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "declaration": true,
    "outDir": "./dist",
    "target": "es2020",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "nodes/**/*",
    "credentials/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ]
}